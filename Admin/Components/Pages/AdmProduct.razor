@page "/products"
@using Admin.DTOs
@using Admin.Services
@rendermode InteractiveServer
@inject ProductSVC ProductService
@inject ImageSVC ImageService
@inject NotifySVC NotifySVC

<div>
    <h3>Product List</h3>
    <NavLink class="btn btn-primary" href="products/add">Create Product</NavLink>
</div>


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Unit Price</th>
            <th>Percent Discount</th>
            <th>Hard Discount</th>
            <th>Image</th>
            <th>Is Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (products != null)
        {
            foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.PercentDiscount</td>
                    <td>@product.HardDiscount</td>
                    <td>
                        <img class="img-fit-width" style="height: 50px ; width:50px;" src="@ImageService.GetProductImg(product.Image)" alt="@product.Name">
                    </td>
                    <td>@product.IsAvailable</td>
                    <td>
                        <a class="btn btn-warning" href="editproduct/@product.Id">Edit</a> |
                        <button class="btn btn-danger" href="deleteproduct/@product.Id" @onclick="async() => await DeleteAsync(product.Id)">Delete</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <h1>Loading...</h1>
        }

    </tbody>
</table>

@code {
    private IEnumerable<ProductDTO>? products;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        products = await ProductService.GetAll();

    }

    private async Task DeleteAsync(Guid id)
    {
        var result = await ProductService.DeleteProductAsync(id);
        if (result)
        {
            await NotifySVC.Notify("Delete product successfully");
            await LoadData();
        }
        else
        {
            await NotifySVC.Notify("Cannot delete product");
        }
    }
}